{%- set _username = username if username else "World" -%}
<html>
  <head>
    <title>Flask and Kafka</title>
  </head>
  <body>
    <p>Hello {{ _username }}!</p>
    {% if username %}
    <p><a href="/">Back</a></p>
    {% else %}
    <p><em>Hint</em>: This is a RESTful web service! Append a username
    to the URL (for example: <code>/Thelonious</code>) to say hello to
    someone specific.</p>
    {% endif %}
  </body>
</html>
